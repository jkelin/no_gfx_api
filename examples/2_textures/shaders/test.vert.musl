
Vertex :: struct
{
    pos: vec3,
    uv: vec2,
}

Data :: struct
{
    verts: []Vertex,
}

Output :: struct
{
    pos: vec4 @position,
    uv: vec2 @out_loc(0),
}

main :: (vert_id: uint @vert_id, data: ^Data @data) -> Output
{
    vert_out: Output;
    vert_out.pos = vec4(data.verts[vert_id].pos.xyz, 1.0);
    vert_out.uv = data.verts[vert_id].uv;
    return vert_out;
}
