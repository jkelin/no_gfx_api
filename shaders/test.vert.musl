
Vertex :: struct
{
    pos: vec4,
    color: vec4
}

Data :: struct
{
    verts: []Vertex,
}

Output :: struct
{
    pos: vec4 @position,
    color: vec3 @out_loc(0),
}

main :: (vert_id: u32 @vert_id, data: ^Data @data) -> Output
{
    out: Output;
    out.pos = data.verts[vert_id].pos;
    out.color = vec3(1.0, 0.0, 0.0);
    return out;
}
